<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="xbmc.repo.kav" name="kav's Add-on Repository" version="1.5" provider-name="kav">
    <extension point="xbmc.addon.repository" name="kav's Add-on Repository">
        <info>https://raw.githubusercontent.com/akavoukis/kodi-repo/master/repo/addons.xml</info>
        <checksum>https://raw.githubusercontent.com/akavoukis/kodi-repo/master/repo/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.githubusercontent.com/akavoukis/kodi-repo/master/repo/</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>kav's Add-on Repository</summary>
        <description>kav's Add-on Repository</description>
        <platform>all</platform>
    </extension>
</addon>

<addon id="script.program.shutdown"
  name="Shutdown Android"
  version="1.0"
  provider-name="kav">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.script" library="addon.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>android</platform>
    <summary lang="en">Shutdown Android</summary>
    <description lang="en">Shutdowns your Android device.</description>
	<disclaimer>Your device must already be rooted, and you will need to grant SU permissions to the script when prompted.</disclaimer>
  </extension>
</addon>
</addons>
